@using RobottoBackend.Data.Repositories
@using RobottoBackend.Models
@inject IMissionRepository MissionRepository



@code {
    [Parameter] public string MissionId { get; set; } = "";
    [ParameterAttribute] public Pages.MissionInformation MissionInformation { get; set; }

    // show altitudes of each drone in an area chart that went on this mission

    // let user pick the drone id ??

    public void SetMissionId(string missionId)
    {
        MissionId = missionId;
        StateHasChanged();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            MissionInformation.SetMissionId(MissionId);
        }
    }
}